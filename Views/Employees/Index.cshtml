@model Exo_P3.ViewModel.EmployeesIndexVM
@{


    var cssClasse = "";
    @if(Model.Employees.Count> 5)
    {
        cssClasse = "alert"; 
    }
    else
    {
        cssClasse = "alert-success";
    }


    <h2 class="@cssClasse">Liste des employee</h2>


    @foreach(var employee in  Model.Employees)
    {
        @await Html.PartialAsync("_EmployeeInfoPartial", employee)
    }
}
